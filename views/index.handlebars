<h1>Burger Time!</h1>

<hr>

<h2>Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless sleepy}}
      {{> burgerBlock sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if sleepy}}
      {{> burgerBlock sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Devoured?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Devour it!<br>
    <input type="radio" name="sleepy" value="0"> Not eaten
  </div>

  <button type="submit">Add Burger</button>
</form>
